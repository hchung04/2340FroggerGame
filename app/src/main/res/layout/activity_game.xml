            <ImageView
                android:id="@+id/upButton"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:srcCompat="@drawable/up_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:orientation="horizontal">

